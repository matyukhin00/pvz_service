{
    "swagger": "2.0",
    "info": {
        "description": "Сервис для управления ПВЗ и приемкой товаров",
        "title": "PVZ Service API",
        "contact": {
            "email": "matyukhin04@inbox.ru"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "paths": {
        "/dummyLogin": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Получение тестового токена",
                "parameters": [
                    {
                        "description": "Роль пользователя",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.DummyLogin"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Bearer token",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Некорректный запрос или роль",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    },
                    "500": {
                        "description": "Ошибка генерации токена",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Авторизация пользователя",
                "parameters": [
                    {
                        "description": "Роль пользователя",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.Login"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Bearer token",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Невалидный JSON",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    },
                    "401": {
                        "description": "Неверные данные для входа",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    }
                }
            }
        },
        "/products": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "pvz"
                ],
                "summary": "Добавление товара в текущую приемку (только для сотрудников ПВЗ)",
                "parameters": [
                    {
                        "description": "ID ПВЗ",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.Products"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Товар добавлен",
                        "schema": {
                            "$ref": "#/definitions/model.Product"
                        }
                    },
                    "400": {
                        "description": "Невалидный JSON, ПВЗ с заданным id не существует или нету открытой приемки",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    },
                    "403": {
                        "description": "Доступ запрещен",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    }
                }
            }
        },
        "/pvz": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "pvz"
                ],
                "summary": "Получение списка ПВЗ с фильтрацией по дате приемки и пагинацией (для модераторов и сотрудников)",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Начальная дата диапозона (RFC3339)",
                        "name": "startDate",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Конечная дата диапозона (RFC3339)",
                        "name": "endDate",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "default": 1,
                        "description": "Номер страницы",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 10,
                        "description": "Количество элементов на странице",
                        "name": "limit",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Список ПВЗ",
                        "schema": {
                            "$ref": "#/definitions/model.PvzInfo"
                        }
                    },
                    "403": {
                        "description": "Доступ запрещен",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "pvz"
                ],
                "summary": "Создание ПВЗ (только для модераторов)",
                "parameters": [
                    {
                        "description": "Данные нового ПВЗ",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.Pvz"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "ПВЗ успешно создан",
                        "schema": {
                            "$ref": "#/definitions/model.Pvz"
                        }
                    },
                    "400": {
                        "description": "Невалидный JSON или ПВЗ уже создан",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    },
                    "403": {
                        "description": "Доступ запрещен",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    }
                }
            }
        },
        "/pvz/{pvzId}/close_last_reception": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "pvz"
                ],
                "summary": "Закрытие последней открытой приемки товаров в рамках ПВЗ (только для сотрудников ПВЗ)",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "UUID ПВЗ",
                        "name": "pvzId",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Приемка закрыта",
                        "schema": {
                            "$ref": "#/definitions/model.Reception"
                        }
                    },
                    "400": {
                        "description": "Невалидный JSON, ПВЗ с заданным id не существует или приемка уже закрыта",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    },
                    "403": {
                        "description": "Доступ запрещен",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    }
                }
            }
        },
        "/pvz/{pvzId}/delete_last_product": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "pvz"
                ],
                "summary": "Удаление последнего добавленного товара из текущей приемки (LIFO, только для сотрудников ПВЗ)",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "UUID ПВЗ",
                        "name": "pvzId",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Товар удален"
                    },
                    "400": {
                        "description": "Невалидный JSON, ПВЗ с заданным id не существует или нечего удалять",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    },
                    "403": {
                        "description": "Доступ запрещен",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    }
                }
            }
        },
        "/receptions": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "pvz"
                ],
                "summary": "Создание новой приемки товаров (только для сотрудников ПВЗ)",
                "parameters": [
                    {
                        "description": "ID ПВЗ",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.Receptions"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Приемка создана",
                        "schema": {
                            "$ref": "#/definitions/model.Reception"
                        }
                    },
                    "400": {
                        "description": "Невалидный JSON, ПВЗ с заданным id не существует или есть незакрытая приемка",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    },
                    "403": {
                        "description": "Доступ запрещен",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    }
                }
            }
        },
        "/register": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Регистрация пользователя",
                "parameters": [
                    {
                        "description": "Данные нового пользователя",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.Register"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Пользователь успешно зарегистрирован",
                        "schema": {
                            "$ref": "#/definitions/model.RegisteredUser"
                        }
                    },
                    "400": {
                        "description": "Невалидный JSON или ошибка регистрации",
                        "schema": {
                            "$ref": "#/definitions/model.Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "model.DummyLogin": {
            "type": "object",
            "properties": {
                "role": {
                    "type": "string",
                    "enum": [
                        "employee",
                        "moderator"
                    ],
                    "example": "employee"
                }
            }
        },
        "model.Error": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        },
        "model.Login": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "user@example.com"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "model.Product": {
            "type": "object",
            "properties": {
                "dateTime": {
                    "type": "string",
                    "example": "2025-04-20T14:43:35.824Z"
                },
                "id": {
                    "type": "string",
                    "example": "364d2ed4-7d7e-417a-ae4e-3c59ee8dd4ee"
                },
                "receptionId": {
                    "type": "string",
                    "example": "11325f80-ef68-4176-906f-c079920953d5"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "электроника",
                        "одежда",
                        "обувь"
                    ],
                    "example": "электроника"
                }
            }
        },
        "model.Products": {
            "type": "object",
            "properties": {
                "pvzId": {
                    "type": "string",
                    "example": "11325f80-ef68-4176-906f-c079920953d5"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "электроника",
                        "одежда",
                        "обувь"
                    ],
                    "example": "электроника"
                }
            }
        },
        "model.Pvz": {
            "type": "object",
            "properties": {
                "city": {
                    "type": "string",
                    "enum": [
                        "Москва",
                        "Казань",
                        "Санкт-Петербург"
                    ],
                    "example": "Москва"
                },
                "id": {
                    "type": "string",
                    "example": "11325f80-ef68-4176-906f-c079920953d5"
                },
                "registrationDate": {
                    "type": "string",
                    "example": "2025-04-20T14:26:22.671Z"
                }
            }
        },
        "model.PvzInfo": {
            "type": "object",
            "properties": {
                "pvz": {
                    "$ref": "#/definitions/model.Pvz"
                },
                "receptions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/model.ReceptionInfo"
                    }
                }
            }
        },
        "model.Reception": {
            "type": "object",
            "properties": {
                "dateTime": {
                    "type": "string",
                    "example": "2025-04-20T14:32:38.032Z"
                },
                "id": {
                    "type": "string",
                    "example": "11325f80-ef68-4176-906f-c079920953d5"
                },
                "pvzId": {
                    "type": "string",
                    "example": "fa796eea-b7f8-4426-8ea3-2884c85652fe"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "in_progress",
                        "closed"
                    ],
                    "example": "in_progress"
                }
            }
        },
        "model.ReceptionInfo": {
            "type": "object",
            "properties": {
                "products": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/model.Product"
                    }
                },
                "reception": {
                    "$ref": "#/definitions/model.Reception"
                }
            }
        },
        "model.Receptions": {
            "type": "object",
            "properties": {
                "pvzId": {
                    "type": "string",
                    "example": "fa796eea-b7f8-4426-8ea3-2884c85652fe"
                }
            }
        },
        "model.Register": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "user@example.com"
                },
                "password": {
                    "type": "string"
                },
                "role": {
                    "type": "string",
                    "enum": [
                        "employee",
                        "moderator"
                    ],
                    "example": "employee"
                }
            }
        },
        "model.RegisteredUser": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "user@example.com"
                },
                "id": {
                    "type": "string",
                    "example": "ddb0897f-dfc8-4f1d-8263-f2d0d11b33fe"
                },
                "role": {
                    "type": "string",
                    "enum": [
                        "employee",
                        "moderator"
                    ],
                    "example": "employee"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "Введите **Bearer JWT_TOKEN** для авторизации",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}